// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url  	    = env("DATABASE_URL")
}

model User{
  id     String @id @default(cuid())
  name   String
  email  String @unique
  fields Field[]
  jobs   Job[]
  indoorPlants IndoorPlant[]
  fieldPlants FieldPlant[]
}

model Field {
  id          String   @id               // Unique ID
  color       String                     // Field color (hex code)
  area        Float                      // Field area (optional)
  label       String                    // Field label (optional)
  coordinates Json                       // Field coordinates (as JSON)
  author      User     @relation(fields: [authorId], references: [id])
  authorId    String
  categories Category[]
  fieldPlants FieldPlant[]
}

model Category {
  id       String   @id @default(cuid())
  type     String   @unique // e.g., "Corn", "Wheat"
  fields   Field[]
  fieldPlants FieldPlant[]
}

model Job {
  id          String    @id @default(cuid())
  title       String
  description String
  status      JobStatus @default(ONGOING)
  startDate   DateTime
  endDate     DateTime
  location    String?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  assignedToId String?
  assignedTo   User?   @relation(fields: [assignedToId], references: [id])
}

model IndoorPlant {
  id                String   @id @default(cuid())
  type              String   // e.g., "basil", "cherryTomato", etc.
  plantingDate      DateTime
  harvestDays       Int
  wateringFrequency Int      // days between watering
  lastWatered       DateTime?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  author            User     @relation(fields: [authorId], references: [id])
  authorId          String
}

model FieldPlant {
  id                String   @id @default(cuid())
  fieldId           String
  field             Field    @relation(fields: [fieldId], references: [id], onDelete: Cascade)
  categoryId        String
  category          Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  plantingDate      DateTime
  harvestDays       Int      // days until harvest
  wateringFrequency Int      // days between watering
  lastWatered       DateTime?
  lastFertilized    DateTime?
  fertilizerFrequency Int?   // days between fertilizing
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  author            User     @relation(fields: [authorId], references: [id])
  authorId          String

  @@unique([fieldId, categoryId])
}

enum JobStatus {
  COMPLETED
  DUE
  ONGOING
}
